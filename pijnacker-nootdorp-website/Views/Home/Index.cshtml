@foreach (var house in Model.Houses)
{
	<div class="house-list-element">
		<a href="/houses/@house.Id">
			<img src="@house.Picture" />
			<h1>@house.Address</h1>
			<h2>€@TextUtilities.BeautifyNumber(house.Price) · @house.IndoorArea m² <img src="~/assets/floor.png" class="icon" /> · @house.OutdoorArea m² <img src="~/assets/tree.png" class="icon" /> · @house.Layout.storeys.Length.ToString() etages · @house.BuildYear</h2>

			<p>@house.Description</p>
		</a>
	</div>
}

@section Scripts {
	<script>
		window.onload = function() {
			if ("@Model.IsInitialized" == "True") {
				document.getElementsByName("price_minimum")[0].value = "@Model.Price_Minimum";
				document.getElementsByName("price_maximum")[0].value = "@Model.Price_Maximum";
				document.getElementsByName("outdoorArea_minimum")[0].value = "@Model.OutdoorArea_Minimum";
				document.getElementsByName("outdoorArea_maximum")[0].value = "@Model.OutdoorArea_Maximum";
				document.getElementsByName("indoorArea_minimum")[0].value = "@Model.IndoorArea_Minimum";
				document.getElementsByName("indoorArea_maximum")[0].value = "@Model.IndoorArea_Maximum";
				document.getElementsByName("buildYear_minimum")[0].value = "@Model.BuildYear_Minimum";
				document.getElementsByName("buildYear_maximum")[0].value = "@Model.BuildYear_Maximum";
			}
		}

		function toggleMoreOptions() {
			var options = document.getElementsByClassName("more-options");
			for (var i = 0; i < options.length; i++) {
				if (options[i].style.height == "0px" || options[i].style.height == "") {
					openMoreOptions(options[i]);
				} else {
					closeMoreOptions(options[i]);
				}
			}
		}

		function setActiveMoreOptions(state) {
			var options = document.getElementsByClassName("more-options");
			for (var i = 0; i < options.length; i++) {
				if (state == true) {
					openMoreOptions(options[i]);
				} else {
					closeMoreOptions(options[i]);
				}
			}
		}

		function closeMoreOptions(option) {
			option.style.height = "0px";
			option.style.opacity = "0";
			option.style.pointerEvents = "none";
			option.style.userSelect = "none";
			option.style.setProperty("padding-bottom", "0", "important");
		}

		function openMoreOptions(option) {
			option.style.height = "9vw";
			option.style.opacity = "1";
			option.style.pointerEvents = "auto";
			option.style.userSelect = "auto";
			option.style.setProperty("padding-bottom", "2vw", "important");
		}
	</script>
